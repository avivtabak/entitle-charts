{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "imageCredentials",
    "platform",
    "agent",
    "datadog",
    "kmsType"
  ],
  "properties": {
    "kmsType": {
      "type": "string",
      "enum": [
        "aws_secret_manager",
        "gcp_secret_manager",
        "azure_secret_manager",
        "hashicorp_vault",
        "kubernetes_secret_manager",
        null
      ]
    },
    "imageCredentials": {
      "type": "string"
    },
    "externalKmsParams": {
      "type": "object",
      "properties": {
        "hashicorp": {
          "type": ["object", "null"],
          "default": null,
          "properties": {
            "connectionString": {
              "type": ["string", "null"],
              "default": null
            }
          }
        }
      }
    },
    "podAnnotations": {
      "type": "object"
    },
    "nodeSelector": {
      "type": "object"
    },
    "platform": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "default": "aws",
          "enum": [
            "gcp",
            "aws",
            "azure",
            null
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "mode": {
                "const": "aws"
              }
            }
          },
          "then": {
            "properties": {
              "aws": {
                "type": "object",
                "required": [
                  "iamRole"
                ],
                "properties": {
                  "iamRole": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "mode": {
                "const": "gcp"
              }
            }
          },
          "then": {
            "properties": {
              "gke": {
                "type": "object",
                "required": [
                  "serviceAccount",
                  "projectId"
                ],
                "properties": {
                  "serviceAccount": {
                    "type": "string"
                  },
                  "projectId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "mode": {
                "const": "azure"
              }
            }
          },
          "then": {
            "properties": {
              "azure": {
                "type": "object",
                "required": [
                  "clientId",
                  "keyVaultName"
                ],
                "properties": {
                  "clientId": {
                    "type": "string"
                  },
                  "keyVaultName": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      ]
    },
    "agent": {
      "type": "object",
      "required": [
        "token",
        "image",
        "replicas"
      ],
      "properties": {
        "replicas": {
          "type": "integer",
          "minimum": 1
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            }
          }
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "default": "ghcr.io/anycred/entitle-agent"
            },
            "tag": {
              "type": "string",
              "default": "master"
            }
          },
          "required": [
            "repository",
            "tag"
          ]
        }
      }
    }
  },
  "global": {
    "type": "object",
    "properties": {
      "environment": {
        "type": "string",
        "default": "onprem"
      }
    }
  },
  "datadog": {
    "type": "object",
    "properties": {
      "datadog": {
        "type": "object",
        "required": [
          "apiKey"
        ],
        "properties": {
          "apiKey": {
            "type": "string"
          }
        }
      }
    }
  }
}
